<div class="container mt-4">
  <div class="row">
    <aside class="col-sm-4">
      <div class="card">
        <h3 class="card-header text-center"><%= @user.name %></h3>
        <div class="card-body text-center">
          <% if @user.image_name? %>
            <%= image_tag(@user.image_name.to_s, size: '100x100', class: 'rounded-circle') %>
            <!--<img src='<%#= @user.image_name %>' class="rounded-circle" alt="ユーザーアイコン" width="100" height="100" >-->
          <% else %>
            <img src="https://res.cloudinary.com/hammpsrnb/image/upload/v1591745401/default_pddqhz.jpg" class="rounded-circle" alt="ユーザーアイコン" width="100" height="100">
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% if current_user == @user %>
          <%= link_to 'Edit', edit_user_path(@user)%>
        <% end %>
      </div>
    </aside>
    <div class="col-sm-8">
      <ul class="nav nav-tabs nav-justified mb-3">
        <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Animes <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
        <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user))%>">Likes <span class="badge badge-secondary"><%= @count_likes%></span></a></li>
      </ul>
      <%= render 'posts/posts', posts: @likes %>
    </div>
  </div>
</div>